{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "github-actions",
    "mise",
    "custom.regex",
  ],
  "customManagers": [
    {
      "customType": "regex",
      // TODO: Change managerFilePatterns after v40 released.
      "fileMatch": [
        "lefthook.yaml",
      ],
      "matchStrings": [
        "git_url: 'https://github.com/(?<depName>.+?)'\n\s+ref: '(?<currentValue>.+?)'",
      ],
      "datasourceTemplate": "github-tags",
    },
    {
      "customType": "regex",
      // TODO: Change managerFilePatterns after v40 released.
      "fileMatch": [
        "Taskfile.yaml",
      ],
      "matchStrings": [
        "taskfile: 'https://github.com/(?<depName>.+?).git//.+?tag=(?<currentValue>.+?)'",
      ],
      "datasourceTemplate": "github-tags",
    },
  ],
  "packageRules": [
    {
      "groupName": "workspace-configs",
      "matchDatasources": ["github-tags"],
      "matchDepNames": "attakei/workspace-configs",
    }
  ]
}
